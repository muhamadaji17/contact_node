<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Form Edit Contact</h2>
            <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>
                    <form method="post" action="/contact/?_method=PUT">
                        <input type="hidden" name="_id" value="<%= contact._id %>" id="">
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                            <input type="text" name='nama' class="form-control" id="nama" value="<%=contact.nama%>"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nomor Handphone</label>
                            <input type="text" name='noHp' class="form-control" id="noHp" value="<%=contact.noHp%>"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="nama" class="form-label">E-Mail</label>
                            <input type="email" name='email' class="form-control" id="email" value="<%=contact.email%>"
                                required>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
        </div>
    </div>
</div>